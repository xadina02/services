<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/checkpoint_overview_message"
        android:layout_width="match_parent"
        android:lines="3"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/take_newest"
            android:text="@string/checkpoint_take_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dip"
            android:layout_weight="50"
            style="@style/ButtonStyle"
            />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/take_newest_with_deltas"
                android:text="@string/checkpoint_take_newest_with_deltas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dip"
                android:layout_weight="50"
                style="@style/ButtonStyle"
            />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/take_oldest"
                android:text="@string/checkpoint_take_oldest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dip"
                android:layout_weight="50"
                style="@style/ButtonStyle"

            />
     </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:listSelector="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
