<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/list_view_conflict_row"
 	android:layout_width="match_parent"
 	android:layout_height="wrap_content"
 	android:orientation="vertical" >

    <View android:id="@+id/separator"
          android:background="#ffffff"
          android:layout_width = "match_parent"
          android:layout_height="2dip"
          android:layout_marginTop="4dip"
          android:layout_marginBottom="4dip"/>

    <androidx.appcompat.widget.AppCompatTextView
		android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/list_item_column_display_name"
              android:textStyle="bold"
              android:textAlignment="viewStart"
              android:gravity="start"
              android:layout_gravity="start" />

    <!-- The local row. -->
    <RelativeLayout
        android:id="@+id/list_item_conflict_resolution_local_row"
        android:orientation="horizontal"
        android:clickable="true"
        android:longClickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
	    <androidx.appcompat.widget.AppCompatRadioButton
	        android:id="@+id/list_item_local_radio_button"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="start|center_vertical"
            android:layout_gravity="start|center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical ="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	    <androidx.appcompat.widget.AppCompatTextView
	        android:id="@+id/list_item_local_text"
            android:textAlignment="viewEnd"
			android:layout_toEndOf="@id/list_item_local_radio_button"
			android:layout_toRightOf="@id/list_item_local_radio_button"
            android:gravity="end"
            android:layout_gravity="fill_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical ="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
        
    </RelativeLayout>
    <!-- the server row -->
    <RelativeLayout
	 	android:id="@+id/list_item_conflict_resolution_server_row"
        android:orientation="horizontal"
        android:clickable="true"
        android:longClickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
	 	android:layout_width="match_parent"
	 	android:layout_height="wrap_content">
 	
	    <androidx.appcompat.widget.AppCompatRadioButton
	        android:id="@+id/list_item_server_radio_button"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="start|center_vertical"
            android:layout_gravity="start|center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical ="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	    <androidx.appcompat.widget.AppCompatTextView
	        android:id="@+id/list_item_server_text"
            android:textAlignment="viewEnd"
			android:layout_toEndOf="@id/list_item_server_radio_button"
			android:layout_toRightOf="@id/list_item_server_radio_button"
            android:gravity="end"
            android:layout_gravity="fill_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical ="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    
	</RelativeLayout>
</LinearLayout>
